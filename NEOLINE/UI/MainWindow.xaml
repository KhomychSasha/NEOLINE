            <Viewbox Grid.Column="2" Grid.Row="0">
                <Label x:Name="labelDeliveryAndPayment" Content="Delivery and payment" Grid.Row="0" Grid.Column="6" Margin="0,12,0,10" FontWeight="Bold" FontFamily="Palatino Linotype" FontSize="30" HorizontalAlignment="Center" MouseEnter="DeliveryAndPayment_MouseEnter" MouseLeave="DeliveryAndPayment_MouseLeave"/>
