                <RowDefinition Height="175*"/>
            </Grid.RowDefinitions>
            <Viewbox Grid.Column="0" Grid.Row="0">
                <Label x:Name="labelAnwersAndQuestions" Content="Answers and Questions" Grid.Row="0" Grid.Column="4" Margin="0,12,0,10" FontWeight="Bold" FontFamily="Palatino Linotype" FontSize="30" HorizontalAlignment="Center" MouseEnter="AnswersAndQuestions_MouseEnter" MouseLeave="AnswersAndQuestions_MouseLeave"/>
