                <Viewbox Grid.Column="1" HorizontalAlignment="Center" Margin="14.8,0,16.8,0.2" Width="378">
                    <Label x:Name="label" FontWeight="Bold" FontFamily="Snap ITC" FontSize="72" Cursor="Hand" >NEOLINE</Label>
